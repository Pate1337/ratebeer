<p>
  <strong>Name:</strong>
  <%= @beer_club.name %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<h3>Members</h3>

<ul>
  <% @beer_club.members.each do |member| %>
    <li><%= link_to member.username, member %></li>
  <% end %>
</ul>

<% if current_user and current_user.beer_clubs.exclude?(@beer_club) %>
  <%= form_for(@membership) do |f| %>
    <%= f.hidden_field :beer_club_id %>
    <%= f.submit value:"join the club", class:"btn btn-primary" %>
  <% end %>
 <% end %>

<% if current_user and current_user.beer_clubs.include?(@beer_club) %>
  <%= form_for(@membership, method: "delete") do |f| %>
    <%= f.hidden_field :beer_club_id %>
    <%= f.submit value: "end the membership", class:"btn btn-danger" %>
  <% end %>
<% end %>

<% if current_user %>
  <%= link_to 'Edit', edit_beer_club_path(@beer_club) %> 
  <br>
  <%= link_to 'Destroy', @beer_club, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'Back', beer_clubs_path, class:"btn btn-primary" %>
